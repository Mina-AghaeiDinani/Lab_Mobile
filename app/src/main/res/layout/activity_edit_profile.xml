<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/colorRestaurant" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgEditPro"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/personal" />

                <ImageButton
                    android:id="@+id/btnEditPro"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignEnd="@+id/imgProfile"
                    android:layout_alignBottom="@+id/imgEditPro"
                    android:background="@drawable/btn_circle_restaurant"
                    android:src="@drawable/ic_camera" />

            </RelativeLayout>

        </RelativeLayout>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@color/lightTransparentGray"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="2dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Personal information"
                    android:textColor="@color/colorBlack"
                    android:textSize="19sp" />

                <EditText
                    android:id="@+id/edt_Editname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_person"
                    android:fontFamily="sans-serif-black"
                    android:hint="Update your full name"
                    android:inputType="textCapWords"
                    android:maxLength="30"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/darkGray"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/edt_EditCellPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_phone_iphone_black_24dp"
                    android:fontFamily="sans-serif-black"
                    android:hint="Update phone number"
                    android:inputType="textCapWords"
                    android:maxLength="30"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/darkGray"
                    android:textSize="17sp" />


                <EditText
                    android:id="@+id/edt_Editmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_mail"
                    android:fontFamily="sans-serif-black"
                    android:hint="Update email"
                    android:inputType="textCapWords"
                    android:maxLength="30"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/darkGray"
                    android:textSize="17sp" />



            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@color/lightTransparentGray"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="2dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Restaurant information"
                    android:textColor="@color/colorBlack"
                    android:textSize="19sp" />

                <EditText
                    android:id="@+id/edt_EditnameRest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_restaurant_black"
                    android:fontFamily="sans-serif-black"
                    android:hint="Update name of Restaurant"
                    android:inputType="textCapWords"
                    android:maxLength="30"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/darkGray"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/edt_EditphoneRest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_local_phone_black_24dp"
                    android:fontFamily="sans-serif-black"
                    android:hint="Update phone number"
                    android:inputType="phone"
                    android:maxLength="30"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/darkGray"
                    android:textSize="17sp" />




                <EditText
                    android:id="@+id/edt_Editdescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:hint="Kind of Your restaurant,eg Persian"
                    android:inputType="textImeMultiLine"
                    android:maxLength="70"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/darkGray"
                    android:textSize="17sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@color/lightTransparentGray"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="2dp"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:drawableStart="@drawable/ic_access_time_black_24dp"
                    android:text="Opening hours"
                    android:textColor="@color/colorBlack"
                    android:textSize="19sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="If you work 2 shifts in a day enter hours like example"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="10:00-15:30 , 19:00-23:15"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:maxLength="30"
                        android:textColor="@color/colorBlack"
                        android:text="Monday: "
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/edt_EditMonday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:hint="10-14:30 , 19:15-22"
                        android:inputType="textCapWords"
                        android:maxLength="30"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/darkGray"
                        android:textSize="17sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:maxLength="30"
                        android:textColor="@color/colorBlack"
                        android:text="Tuesday: "
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/edt_EditTuesday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:hint="10-14:30 , 19:15-22"
                        android:inputType="textCapWords"
                        android:maxLength="30"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/darkGray"
                        android:textSize="17sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:maxLength="30"
                        android:textColor="@color/colorBlack"
                        android:text="Wednesday: "
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/edt_EditWednesday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:hint="10-14:30 , 19:15-22"
                        android:inputType="textCapWords"
                        android:maxLength="30"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/darkGray"
                        android:textSize="17sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:maxLength="30"
                        android:textColor="@color/colorBlack"
                        android:text="Thursday: "
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/edt_EditThursday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:hint="10-14:30 , 19:15-22"
                        android:inputType="textCapWords"
                        android:maxLength="30"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/darkGray"
                        android:textSize="17sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:maxLength="30"
                        android:textColor="@color/colorBlack"
                        android:text="Friday: "
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/edt_EditFriday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:hint="10-14:30 , 19:15-22"
                        android:inputType="textCapWords"
                        android:maxLength="30"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/darkGray"
                        android:textSize="17sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:maxLength="30"
                        android:textColor="@color/colorBlack"
                        android:text="Saturday: "
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/edt_EditSaturday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:hint="10-14:30 , 19:15-22"
                        android:inputType="textCapWords"
                        android:maxLength="30"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/darkGray"
                        android:textSize="17sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:maxLength="30"
                        android:textColor="@color/colorBlack"
                        android:text="Sunday: "
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/edt_EditSunday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:hint="10-14:30 , 19:15-22"
                        android:inputType="textCapWords"
                        android:maxLength="30"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/darkGray"
                        android:textSize="17sp" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/EditbtnRegProfile"
            android:layout_width="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:text="Update"
            android:textSize="17sp"
            android:fontFamily="sans-serif-black"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_restaurant"

            />
        <Button
            android:id="@+id/EditbtnBack"
            android:layout_width="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:text="Back"
            android:textSize="17sp"
            android:fontFamily="sans-serif-black"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_restaurant"

            />
    </LinearLayout>
</ScrollView>