<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    app:cardBackgroundColor="@color/colorBlack"
    app:cardCornerRadius="2dp">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/OrderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:fontFamily="sans-serif"
            android:text="Order num"
            android:textColor="@color/lightGrayTransparent"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/customerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/OrderTextView"
            android:layout_marginTop="3dp"
            android:layout_marginStart="10dp"
            android:fontFamily="sans-serif-light"
            android:text="Iranian food"
            android:textColor="@color/lightGray"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/nbitemTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/customerTextView"
            android:layout_toLeftOf="@+id/tvCart"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/lightGray"
            android:fontFamily="sans-serif-light"
            android:text="12"
            />
        <TextView
            android:id="@+id/tvCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/customerTextView"
            android:layout_toLeftOf="@+id/priceTextView"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:textSize="15sp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/colorWhite"
            android:text="-"
            />
        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/customerTextView"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/lightGray"
            android:fontFamily="sans-serif-light"
            android:text="140.5 $" />

    </RelativeLayout>
</android.support.v7.widget.CardView>

