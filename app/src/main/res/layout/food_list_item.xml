<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:elevation="6dp"
    app:cardBackgroundColor="@color/lightTransparentGray"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_Food"
            android:layout_width="170dp"
            android:layout_height="150dp"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_food" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_FoodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Name of food"
                android:textColor="@color/nameFood"
                android:textSize="15sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="8dp"
                android:paddingStart="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Price:"
                    android:textColor="@color/colorBlack"
                    />
                <TextView
                    android:id="@+id/txt_Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25.25 "
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:paddingStart="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Discount: "
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/txt_Discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:paddingStart="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Quantity: "
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp" />
            <TextView
                android:id="@+id/txt_AvailableQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="1000"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_ShortDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginTop="8dp"
                android:text="Short Description about food, It could be in 2 lines"
                android:textColor="@color/colorBlack"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>
